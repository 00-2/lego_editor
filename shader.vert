#version 450 corelayout (location = 0) in vec3 aPos;layout (location = 1) in vec3 norm;uniform mat4 model;uniform mat3 model_norm;uniform mat4 camera;out vec3 faceNorm;out vec4 worldPos;void main() {  worldPos = model * vec4(aPos.x, -aPos.y * 0.4, aPos.z, 1);  gl_Position = camera * worldPos;  faceNorm = model_norm * norm;  gl_Position = vec4(gl_Position.x, -gl_Position.y, (gl_Position.z * 2 - 1) / 1000, gl_Position.w + gl_Position.z);}